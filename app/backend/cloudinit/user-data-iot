    groups: sudo
    shell: /bin/bash
    sudo: ALL=(ALL) NOPASSWD:ALL
    ssh_authorized_keys:
      - {{ssh}}
      
chpasswd:
  list: |
    ubuntu:bonjour
  expire: False

