  -  curl -sfL https://get.k3s.io | {{k3scmd}}
  - sleep 7 
  - bash /home/ubuntu/start.sh

write_files:
  - path: /home/ubuntu/start.sh
    permissions: '0755'
    content: |
      apt update -y
      apt install -y prometheus-node-exporter
    append: true